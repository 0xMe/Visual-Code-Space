<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <PreferenceCategory
    app:iconSpaceReserved="false"
    app:title="@string/configure">

    <Preference
      app:key="pref_general"
      app:title="@string/general"
      app:summary="@string/general_summary"
      app:iconSpaceReserved="false" />

    <Preference
      app:key="pref_editor"
      app:title="@string/editor"
      app:summary="@string/editor_summary"
      app:iconSpaceReserved="false" />

    <Preference
      app:key="pref_file"
      app:title="@string/file"
      app:summary="@string/file_summary"
      app:iconSpaceReserved="false" />

  </PreferenceCategory>

  <PreferenceCategory
    app:iconSpaceReserved="false"
    app:title="@string/about">

    <Preference
      app:icon="@drawable/ic_github"
      app:key="github"
      app:summary="@string/pref_github_summary"
      app:title="GitHub" />

  </PreferenceCategory>

</PreferenceScreen>