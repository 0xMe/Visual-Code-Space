{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"], {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    }, {
      "open": "'",
      "close": "'",
      "notIn": ["string"]
    }, {
      "open": "/**",
      "close": " */",
      "notIn": ["string"]
    }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
		"decreaseIndentPattern": {
			"pattern": "^((?!.*?/\\*).*\\*\/)?\\s*[\\}\\]].*$"
		},
		"increaseIndentPattern": {
			"pattern": "^((?!//).)*(\\{([^}\"'`/]*|(\\t|[ ])*//.*)|\\([^)\"'`/]*|\\[[^\\]\"'`/]*)$"
		},
		"unIndentedLinePattern": {
			"pattern": "^(\\t|[ ])*[ ]\\*[^/]*\\*/\\s*$|^(\\t|[ ])*[ ]\\*/\\s*$|^(\\t|[ ])*[ ]\\*([ ]([^\\*]|\\*(?!/))*)?$"
		}
	},
  "folding": {
		"markers": {
			"start": "^\\s*\\/\\*\\s*#region\\b\\s*(.*?)\\s*\\*\\/",
			"end": "^\\s*\\/\\*\\s*#endregion\\b.*\\*\\/"
		}
	}
}