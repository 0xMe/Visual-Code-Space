<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:orientation="vertical">
  
  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/explorer"
      android:textSize="16sp"
      android:textStyle="bold" />

  </LinearLayout>

  <com.google.android.material.divider.MaterialDivider
    android:layout_height="1px"
    android:layout_width="match_parent"
    android:alpha="0.5" />

  <LinearLayout
    android:id="@+id/expand_collapse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
      android:id="@+id/down_button"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/chevron_down" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/no_folder_opened"
      android:textSize="14sp"
      android:paddingLeft="10dp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/container_open"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp"
    android:gravity="center_horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/folder_not_yet_opened"
      android:textSize="17sp"
			android:paddingBottom="5dp" />

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/open_folder"
      android:id="@+id/open_folder" />

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/open_recent"
      android:id="@+id/open_recent" />

  </LinearLayout>

  <RelativeLayout
    android:id="@+id/file_manager"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_weight="1.0"
    android:visibility="gone">

    <RelativeLayout
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:layout_below="@id/toolbar">

      <androidx.recyclerview.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/rv_files" />

      <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/empty_layout">

        <com.google.android.material.imageview.ShapeableImageView
          android:layout_height="60dp"
          android:layout_width="60dp"
          android:layout_marginBottom="5dp"
          android:layout_centerInParent="true"
          android:src="@drawable/folder_open" />

      </RelativeLayout>

    </RelativeLayout>

  </RelativeLayout>

  <com.google.android.material.divider.MaterialDivider
    android:layout_height="1px"
    android:layout_width="match_parent"
    android:alpha="0.5" />

  <com.raredev.vcspace.ui.widget.NavigationSpace
    android:layout_height="45dp"
    android:layout_width="match_parent"
    android:id="@+id/navigation_space"
    android:visibility="gone" />

</LinearLayout>
