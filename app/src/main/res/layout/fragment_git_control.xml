<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="branch name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:id="@+id/branch_name"
            android:textColor="?colorOnSurface" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_refresh"
            android:layout_alignParentRight="true"
            android:id="@+id/refresh"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:tint="?colorOnSurface"
            android:tintMode="src_in" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_settings"
            android:layout_toLeftOf="@id/refresh"
            android:layout_centerVertical="true"
            android:id="@+id/settings"
            android:tint="?colorOnSurface"
            android:tintMode="src_in" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish branch as &apos;origin/main&apos;"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:id="@+id/publish"
        app:cornerRadius="7dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/publish">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commit_message_card"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?colorSecondaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message *"
                    android:textColor="?colorOnSecondaryContainer" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Summary of your commit..."
                    android:inputType="text"
                    android:id="@+id/commit_message" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/commit_message_card"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/review_changes_card"
            app:cardBackgroundColor="?colorSecondaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review Changes"
                    android:textColor="?colorOnSecondaryContainer" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 changed file"
                        android:id="@+id/changed_file_count"
                        android:layout_centerVertical="true"
                        android:textColor="?colorOnSecondaryContainer" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stage All"
                        android:layout_alignParentRight="true"
                        android:id="@+id/stage_all"
                        android:textSize="11sp"
                        android:padding="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:minHeight="30dp"
                        android:minWidth="75dp"
                        android:layout_margin="3dp"
                        app:cornerRadius="6dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset All"
                        android:layout_toLeftOf="@id/stage_all"
                        android:id="@+id/reset_all"
                        android:textSize="11sp"
                        android:padding="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:minHeight="30dp"
                        android:minWidth="75dp"
                        android:layout_margin="3dp"
                        app:cornerRadius="6dp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/changed_file_list" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Committing will automatically stage your changes."
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="?colorTertiary"
                        android:paddingTop="4dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stage and commit all changes"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/review_changes_card"
            android:id="@+id/commit_changes"
            app:cornerRadius="7dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/commit_changes"
            android:id="@+id/commit_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
